# ========================================
# AWS Configuration
# ========================================
AWS_REGION=eu-north-1
AWS_ACCOUNT_ID=123456789012
65454
# ========================================
# DynamoDB Configuration
# ========================================
# Environment prefix for table names (dev, staging, prod)
DYNAMODB_TABLE_PREFIX=dev

# ========================================
# JWT Secrets
# ========================================
# IMPORTANT: Generate strong secrets for production!
# Use: openssl rand -base64 32
JWT_SECRET=change-this-to-a-long-random-secret-key
REFRESH_TOKEN_SECRET=change-this-to-another-long-random-secret-key

# Token expiry times (in seconds)
ACCESS_TOKEN_EXPIRY=1800        # 30 minutes
REFRESH_TOKEN_EXPIRY=2592000    # 30 days

# ========================================
# Master User Registration
# ========================================
# Secret key required for creating master users
# IMPORTANT: Keep this secure and never commit the actual value!
MASTER_SECRET_KEY=your-super-secret-master-key-here

# ========================================
# Verification Configuration
# ========================================
VERIFICATION_CODE_EXPIRY=600    # 10 minutes

# ========================================
# Rate Limiting
# ========================================
LOGIN_RATE_LIMIT=10             # Max login attempts per hour per IP
REGISTER_RATE_LIMIT=100         # Max registrations per hour per IP
API_RATE_LIMIT=100              # Max API calls per minute per user
MAX_FAILED_LOGIN_ATTEMPTS=5     # Lock account after this many failed attempts

# ========================================
# Email Configuration (Optional)
# ========================================
# For sending verification emails via AWS SES
EMAIL_FROM=noreply@yourdomain.com

# ========================================
# SMS Configuration (Optional)
# ========================================
# For sending verification SMS via AWS SNS
SMS_SENDER_ID=YourApp

# ========================================
# Deployment Configuration
# ========================================
# Lambda function name
LAMBDA_FUNCTION_NAME=basic-auth-api
# API Gateway stage name
API_STAGE_NAME=prod
